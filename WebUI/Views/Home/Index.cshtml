<!-- product section -->
<div class="product-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Our</span> Products</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid, fuga quas itaque eveniet beatae optio.</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="single-product-item">
                        <div class="product-image">
                            <a href="/product/details/@item.Id"><img src="@item.PhotoUrl" alt=""></a>
                        </div>
                        <h3>@item.Name</h3>
                        <p class="product-price"><span>Per Kg</span>@item.Price AZN </p>
                        <a href="/cart" pro-id="@item.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                    </div>
                </div>

            }


        </div>
    </div>
</div>
<!-- end product section -->
<!-- cart banner section -->
<section class="cart-banner pt-100 pb-100">
    <div class="container">
        <div class="row clearfix">
            @{
                decimal discount = @Model.Countdown.Discount / 100;
                decimal minusDiscount = @Model.DiscProduct.Price * discount;
                decimal newPrice = Math.Round((@Model.DiscProduct.Price - minusDiscount),1);
                decimal currentDiscount = Math.Truncate(@Model.Countdown.Discount);
            }
            <!--Image Column-->
            <div class="image-column col-lg-6">
                <div class="image">
                    <div class="price-box">
                        <div class="inner-price">
                            <span class="price">
                                <strong> @currentDiscount%</strong> <br> off per kg
                            </span>
                        </div>

                    </div>
                    <a sr = "/product/details/@Model.DiscProduct.Id">
                           <img src="@Model.DiscProduct.PhotoUrl" alt="">
                    </a>
                 
                </div>
            </div>
            <!--Content Column-->
            <div class="content-column col-lg-6">
                <h3><span class="orange-text">Deal</span> of the @Model.Countdown.Month.ToString(" MMMM ")</h3>
                <h4>@Model.DiscProduct.Name</h4>
                <div class="d-flex">
                    <h4 class="old-price"> <del>@Model.DiscProduct.Price </del></h4>
                    <h4 style="font-weight: bold; color: #f28123; margin-left: 17px;" class="new-price"> @(newPrice) AZN </h4>
                </div>
                <div class="text">@Model.Countdown.dealDescr</div>
                <!--Countdown Timer-->


                <ul class="countdown">
                    <li class="counter-column">
                        <span class="days count">00</span>
                        <p class="days_ref refs">days</p>
                    </li>

                    <li class="counter-column">
                        <span class="hours count">00</span>
                        <p class="hours_ref refs">hours</p>
                    </li>

                    <li class="counter-column">
                        <span class="minutes count">00</span>
                        <p class="minutes_ref refs">minutes</p>
                    </li>

                    <li class="counter-column">
                        <span class="seconds count">00</span>
                        <p class="seconds_ref refs">seconds</p>
                    </li>
                </ul>

                <p id="test-time" style="opacity:inherit; visibility:hidden;">
                    @Model.Countdown.months/@Model.Countdown.days/@Model.Countdown.year
                    @Model.Countdown.hours:@Model.Countdown.minutes:@Model.Countdown.seconds

                </p>
            </div>
           
        </div>
    </div>
    </div>
</section>
